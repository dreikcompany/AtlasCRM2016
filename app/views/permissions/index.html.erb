<div id="formulario_title" style="margin: 0 auto;width:50%;" >
  <h3 align="center" style="color:white;font-size:130%;line-height: 120%;">Lista de Permisos</h3>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Buscar...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button"><span class="icon-magnifying-glass"></span></button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<br>
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr class="active">
          <th>Url</th>
          <th>Texto</th>
          <th>Padre</th>
          <th>Estatus</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @permissions.each do |permission| %>
      <%if permission.estatus =='A' %>
      <tr id="activos">
        <td><%= permission.url %></td>
        <td><%= permission.texto %></td>
        <td><%= permission.padre %></td>
        <td><%= permission.estatus %></td>
        <td><%= link_to 'Mostrar', permission %></td>
        <td><%= link_to 'Editar', edit_permission_path(permission) %></td>
        <td><%= link_to 'Eliminar', permission, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      <%else %>
      <tr id="eliminados">
        <td><%= permission.url %></td>
        <td><%= permission.texto %></td>
        <td><%= permission.padre %></td>
        <td><%= permission.estatus %></td>
        <td><%= link_to 'Mostrar', permission %></td>
        <td><%= link_to 'Editar', edit_permission_path(permission) %></td>
        <td><%= link_to 'Eliminar', permission, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      <%end%>

    <% end %>
    </tbody>
  </table>
  </div>
<%= link_to 'Nuevo Permiso', new_permission_path %>