<%if @resultados.empty? %>  
<span style='color:red;'>No se Encontraron datos</span>	
<%else%>
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr class="active">
        <th>Nombre</th>
        <th>Estatus</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @resultados.each do |role| %>
      <%if role.estatus =='A' %>
      <tr id="activos">
        <td><%= role.nombre %></td>
        <td><%= role.estatus %></td>
        <td><%= link_to 'Mostrar', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      <%else %>
      <tr id="eliminados">
        <td><%= role.nombre %></td>
        <td><%= role.estatus %></td>
        <td><%= link_to 'Mostrar', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      <%end%>
    <% end %>
    </tbody>
  </table>
  </div>
  <%= link_to 'Nuevo Rol', new_role_path %>
<%end%>