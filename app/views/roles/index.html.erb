<div id="formulario_title" style="margin: 0 auto;width:50%;" >
  <h3 align="center" style="color:white;font-size:130%;line-height: 120%;">Lista de Roles</h3>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="input-group">
      <%= text_field_tag 'txtbuscar_roles',nil, placeholder: 'Buscar...', class: 'form-control' %>
      <span class="input-group-btn">
      <%= button_tag '', class: 'btn btn-default',id: 'bt_buscar_roles', type: 'button' do%>
        <%= content_tag(:span,'', class: "icon-magnifying-glass") %>
      <%end %>
          </span>
    </div>
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<br>

<div id="resultados2">
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr class="active">
        <th>Nombre</th>
        <th>Estatus</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @roles.each do |role| %>
      <%if role.estatus =='A' %>
      <tr id="activos">
        <td><%= role.nombre %></td>
        <td><%= role.estatus %></td>
        <td><%= link_to 'Mostrar', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      <%else %>
      <tr id="eliminados">
        <td><%= role.nombre %></td>
        <td><%= role.estatus %></td>
        <td><%= link_to 'Mostrar', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
      <%end%>

    <% end %>
    </tbody>
  </table>
  </div>
<%= link_to 'Nuevo Rol', new_role_path %>
</div>